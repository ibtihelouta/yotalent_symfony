{# templates/commande/create.html.twig #}

{% extends 'base2.html.twig' %}

{% block content %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <br>
                <h2>Votre panier :</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Prix unitaire</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in app.session.get('cart') %}
                            <tr>
                                <td>{{ item.product.nomP }}</td>
                                <td>{{ item.product.prixP }} DNT</td>
                                <td>
                                    <a href="property-1.html">
                                        <img src="{{ asset('uploads/produits/' ~ item.product.imgP) }}" alt="{{ item.product.imgP }}" height="80" width="80">
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table> 
                <center><h2> Prix total : {{total}} DNT </h2></center>
            </div>
            <div class="col-md-6">
                <h1>Création d'une commande</h1>
                {{ form_start(form, {
                    'attr' :{
                        'novalidate' : 'novalidate',
                    }   
                })}}
                    <div class="form-group">
                        {{ form_label(form.NomClient, 'Nom') }}
                        {{ form_widget(form.NomClient, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.NomClient) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.PrenomClient, 'Prénom') }}
                        {{ form_widget(form.PrenomClient, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.PrenomClient) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.adresse, 'Adresse') }}
                        {{ form_widget(form.adresse, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.adresse) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.date_com, 'Date de la commande') }}
                        {{ form_widget(form.date_com) }}
                        {{ form_errors(form.date_com) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.prix_total, 'Prix total') }}
                        {{ form_widget(form.prix_total, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.prix_total) }}
                    </div>

                    <button type="submit" class="btn btn-primary">Valider</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
