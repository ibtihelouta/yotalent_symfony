{% extends 'back.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="container">
		<h1 style="margin-top:30px" class="text-center mb-4">hello
			{{ user.name }}</h1>
		<center><img style="border-radius: 50%; object-fit: cover;" src="{{ asset('uploads/images/' ~ user.image) }}" width="150px" height="150px"/></center>
		<br>
		<center>
			<a class="btn btn-primary" href="/guest/edit">
				edit profil</a>
		</center>
		<div class="row justify-content-center">
			<div class="col-md-8">
				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ user.id }}</td>
						</tr>
						<tr>
							<th>Email</th>
							<td>{{ user.email }}</td>
						</tr>
					</tbody>
				</td>

			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
		</tbody>
	</table>

	<div>
		<td>
			<center>
				<img src="https://api.qrserver.com/v1/create-qr-code/?data={{ user.email }}" alt="QR code for {{ user.email }}"/></td>
		</td>
	</center>
</div></div></div><div class="row justify-content-center"><div class="col-md-8"></div></div></div>{% endblock %}
