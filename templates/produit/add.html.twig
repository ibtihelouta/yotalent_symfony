{% extends 'base.html.twig' %}





       {%  block content %}

   


      <div id="main-content">
            <div class="container-fluid">

                <div class="block-header py-lg-4 py-3">
                    <div class="row g-3">
                        <div class="col-md-6 col-sm-12">
                            <h2 class="m-0 fs-5"><a href="javascript:void(0);" class="btn btn-sm btn-link ps-0 btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a> Ajouter Un Produit</h2>
                          
                        </div>
                     
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-body">
                        <div class="row g-3">

                        {{form_start(form, {
                            'attr' :{
                                'novalidate' : 'novalidate' , 
                                'style':' margin-left: 277px;'
                            }   
                        })}}
                            <div class="col-md-4 col-sm-12">
                            {{form_label(form.idP,'Réference du Produit ')}}
                            {{form_widget(form.idP,{
                            'attr' :{
                                'class' : 'form-control','placeholder':"La réference doit étre positive"
                            },
                            })}}
                              {{form_errors(form.idP)}}
        
                            
                            
                               
                            </div>
                            <div class="col-md-4 col-sm-12">
                                 {{form_label(form.nomP,'Nom du produit')}}
                            {{form_widget(form.nomP,{
                            'attr' :{
                                'class' : 'form-control' , 'placeholder':" Tapez le nom de votre produit "
                            }
                            })}}
                            {{form_errors(form.nomP)}}
                            </div>
                            <div class="col-md-4 col-sm-12">
                                    {{form_label(form.prixP,'Prix du produit ')}}
                            {{form_widget(form.prixP,{
                            'attr' :{
                                'class' : 'form-control' , 'placeholder':"Tapez le Prix de votre produit"
                            }
                            })}}
                              {{form_errors(form.prixP)}}
                            </div>
                            <div class="col-md-4 col-sm-12">
                              {{form_label(form.descriptionP,'Détails sur le Produit ')}}
                            {{form_widget(form.descriptionP,{
                            'attr' :{
                                'class' : 'form-control','placeholder':"Décrivez votre produit en bref"
                            }
                            })}}
                            {{form_errors(form.descriptionP)}}
                            </div>
                             <div class="col-md-4 col-sm-12">
                              {{form_label(form.imgP,'Image  ')}}
                            {{form_widget(form.imgP,{
                            'attr' :{
                                'class' : 'form-control'
                            }
                            })}}
                            
                             
                            </div>

                            {# <div class="col-md-4 col-sm-12">
                                <input type="text" class="form-control" placeholder="Password">
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <input type="text" class="form-control" placeholder="Confirm Password">
                            </div>
                            <div class="col-md-3 col-sm-12">
                                <input type="text" class="form-control" placeholder="Mobile No">
                            </div>
                            <div class="col-md-3 col-sm-12">
                                <input type="text" class="form-control" placeholder="Client ID *">
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <input type="text" class="form-control" placeholder="Address">
                            </div> #}
                       
                        </div>
<div>
</div>

                        {{form_widget(form.save,{
                            'attr' :{
                                'class' : 'btn btn-primary' , 
                                'style':'width: 214px;
    margin-left: 537px;'
                            }
                            })}}

                            

                            
                        
                    </div>
                </div>

            </div>
        </div>
        {{form_end(form)}}
            {% endblock %}